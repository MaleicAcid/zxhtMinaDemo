<!--index.wxml-->

<view class="container">

  <view class="header-contaniner">

    <view class="header-box">
      <view class="header-input-box">
          <image mode='scaleToFit' src="/images/search.png" background-size="cover"></image>
          <input placeholder="请输入搜索关键字"/>
      </view>
      <button>取消</button>
    </view>

  
  </view>

  <view class="label-contaniner">
      <view class="history-box">
          <view class="history-box-text">
            <text>历史搜索</text><text>清除</text>
          </view>
          <view class="history-box-label">
            <view wx:for="{{historyList}}">{{item.name}}</view>
          </view>
      </view>
  
  </view>
</view>
