/**addressList.wxss**/

.container {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  background-color: #fff;

}

.addressList-contaniner {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.addressList-head {
  padding-left: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.addressList-item {
  display: flex;
  flex-direction: row;
  border-top: 1px #e3e3e3 solid;

}

.addressList-item-left {
  padding-left: 40rpx;
  width: 84%;
}

.addressList-item-left view:nth-child(1) {
  padding-top: 20rpx;
}

.addressList-item-name {
  padding-right: 20rpx;
}


.addressList-item-left view:nth-child(2) {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: #888;
}

.addressList-item-default {
  color: #ef3535;
}

.addressList-item-right {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ef3535;
}

.addressList-bottom-blank {
  width: 100%;
  height:100rpx;
}
.bottom-contaniner {
  height:100rpx;
  width: 100%;
  z-index: 999;
  border: 1px #e3e3e3 solid;
  font-size: 40rpx;
  position:fixed;
  bottom: 0px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;

}

.addAddressBtn {
  color: #ef3535;
}